<div class="container">
  <table class="table">

    <tbody>
      <% @lists.each do |list| %>
        <% if list.completed %>
        <tr class="table-secondary completed">
          <td class="desc"><%= link_to list.description, edit_list_path(list) %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: "hidden" %>
              <%= f.check_box :completed, :checked => false, :style => "visibility:hidden" %>
              <%= f.submit "Uncheck" %>
            <% end %>
          </td>
          <td style="text-align: right;">   
            <%= link_to 'X', list, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% else %>
        <tr>
          <td class="desc"><%= link_to list.description, edit_list_path(list) %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: "hidden" %>
              <%= f.check_box :completed, :checked => true, :style => "visibility:hidden" %>
              <%= f.submit "Check" %>
            <% end %>
          </td>
          <td style="text-align: right;">   
            <%= link_to 'X', list, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/><br/>
  <%= link_to 'Delete Marked Tasks', home_trash_em_path, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' }%>
  <%= link_to 'Delete All Tasks', home_trash_all_path, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Are you sure?' }%>
</div>

