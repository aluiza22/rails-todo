<div class="container">
  <table class="table">

    <tbody>
      <% @lists.each do |list| %>
        <% if list.completed %>
        <tr class="completed">
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: "hidden" %>
              <%= f.check_box :completed, :checked => false, :style => "visibility:hidden" %>
              <%= button_tag( :class => "btn btn-sm btn-secondary") do %>
                <i class="fas fa-check"></i>
              <% end %>
            <% end %>
          </td>
          <td class="desc"><%= link_to list.description, edit_list_path(list) %></td>          
          <td style="text-align: right;">   
            <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, list, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% else %>
        <tr>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: "hidden" %>
              <%= f.check_box :completed, :checked => true, :style => "visibility:hidden" %>
              <%= button_tag( :class => "btn btn-sm btn-secondary") do %>
                <i class="fas fa-square" style="opacity:0"></i>
              <% end %>
            <% end %>
          </td>
          <td class="desc"><%= link_to list.description, edit_list_path(list) %></td>          
          <td style="text-align: right;">   
            <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, list, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/><br/>
  <nav class="navbar fixed-bottom navbar-light bg-light d-flex justify-content-center">
    <%= link_to 'Delete Marked Tasks', home_trash_em_path, class: 'btn btn-secondary btn-sm mr-1', data: { confirm: 'Are you sure?' }%>
    <%= link_to 'Delete All Tasks', home_trash_all_path, class: 'btn btn-outline-secondary btn-sm ml-1', data: { confirm: 'Are you sure?' }%>
  </nav>
  
</div>

